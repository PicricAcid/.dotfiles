{
  description = "A very basic flake";

  inputs = {
    nixpkgs.url = "github:nixos/nixpkgs?ref=nixos-unstable";
  };

  outputs = { self, nixpkgs }: {

    packages.x86_64-linux.hello = nixpkgs.legacyPackages.aarch64-darwin..hello;

    packages.x86_64-linux.default = self.packages.aarch64-darwin.hello;

  };
}
